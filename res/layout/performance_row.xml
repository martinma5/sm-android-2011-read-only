<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:minHeight="50px">
     	<TextView android:id="@+id/PerformanceStartTime"
     	          android:textColor="#000000"
     	          android:background="#FFFFFF"
     	          android:layout_height="wrap_content"
     	          android:layout_width="wrap_content"/>
     	<TextView android:text="-" 
     	          android:id="@+id/to"
     	          android:layout_height="fill_parent"
     	          android:background="#FFFFFF"
     	          android:layout_toRightOf="@+id/PerformanceStartTime"
     	          android:textColor="#000000"
     	          android:layout_width="wrap_content"/>
     	<TextView android:id="@+id/PerformanceEndTime"
     	          android:layout_toRightOf="@+id/to"
     	    	  android:textColor="#000000"
     	          android:background="#FFFFFF"
     	     	  android:layout_height="wrap_content"
     	          android:layout_width="wrap_content"/>
    	<TextView android:id="@+id/PerformanceName"
     	          android:layout_toRightOf="@+id/PerformanceEndTime"
     	          android:paddingLeft="20px"
     	     	  android:layout_height="wrap_content"
     	          android:layout_width="wrap_content"/>
    	<TextView android:id="@+id/PerformanceType"
                  android:layout_marginRight="20dip"
    			  android:layout_below="@+id/PerformanceName"
    	          android:layout_alignParentRight="true"
     	     	  android:layout_height="wrap_content"
     	          android:layout_width="wrap_content"/>
</RelativeLayout>